# Q-MediScan Backend Environment Configuration

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Quantum Computing Configuration
CLASSIQ_API_KEY=your_classiq_api_key_here
QUANTUM_BACKEND=simulator
QUANTUM_SHOTS=1000

# Model Configuration
MODEL_VERSION=1.0.0
ENABLE_QUANTUM_MODEL=true
ENABLE_CLASSICAL_MODEL=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Security Configuration
SECRET_KEY=your_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Configuration (if needed)
DATABASE_URL=sqlite:///./q_mediscan.db

# File Upload Configuration
MAX_FILE_SIZE=5242880  # 5MB
ALLOWED_FILE_TYPES=["text/csv", "application/csv"]

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600  # 1 hour